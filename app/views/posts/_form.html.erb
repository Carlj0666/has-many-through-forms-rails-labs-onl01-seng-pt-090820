<h1> Create A New Post </h1>
<%= form_for @post do |f|%>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :content %>
  <%= f.text_area :content %><br>
  <%= f.label :category %>
  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %><br>
  <%= f.label "New Category:" %>
  <%= f.fields_for :comments, @post.comments.build do |comments_fields| %><br>
    <%= comments_fields.text_field :content %><br>
    <% end %>
    <%= f.submit %>
  <% end %>

